package bs.pi.gateway.client.zigbee;

import java.util.ArrayList;

import bs.app.zigbee.zigbee.AppReg;
import bs.app.zigbee.zigbee.CodeGenerator;
import bs.pi.gateway.client.IClient;
import bs.pi.gateway.client.port.PortClient;
import bs.pi.gateway.receiver.IReceiver;
import bs.pi.gateway.sender.ISender;
import bs.pi.gateway.sender.PortSender;

public class ZigbeeClient implements IClient{

	public static final String DEFAULT_CFG_PATH = System.getProperty("user.dir")+System.getProperty("file.separator")+"zigbeeClientCfg.properties";
	private String cfgPath;
	private ZigbeeClientCfg cfg;
	private PortClient portClient;
	private ISender portSender;
	
	public void setCfgPath(String path){
		this.cfgPath = path;
	}
	
	@Override
	public void init() throws Exception {
		
		if(cfgPath == null)
			cfgPath = DEFAULT_CFG_PATH;
		cfg = new ZigbeeClientCfg(cfgPath);
		
		portClient = new PortClient();
		portClient.setCfgPath(PortClient.DEFAULT_CFG_PATH);
		portClient.init();
		portClient.start();
		portSender = portClient.getSender();
		
		portSender.send(CodeGenerator.CMD_DEVICE_RESET);
		Thread.sleep(2000);
		
		portSender.send(CodeGenerator.CMD_STARTUP_WITHOUT_LAST_STATE);
		Thread.sleep(500);
		
		portSender.send(CodeGenerator.CMD_DEVICE_RESET);
		Thread.sleep(2000);
		
		portSender.send(CodeGenerator.chanlistCfg(cfg.getChannel()));
		Thread.sleep(500);
		
		portSender.send(CodeGenerator.PANIDCfg(cfg.getPanID()));
		Thread.sleep(500);
		
		portSender.send(CodeGenerator.deviceTypeCfg(cfg.getDeviceType()));
		Thread.sleep(500);
		
		portSender.send(CodeGenerator.CMD_ZDO_DIRECT_CB);
		Thread.sleep(500);
		
		ArrayList<AppReg> appRegList = cfg.getAppRegList();
		if( appRegList != null && appRegList.size()>0){
			for(AppReg appReg : appRegList){
				registerAppToZigbee(appReg);
			}
		}
	}

	@Override
	public void start() {
		
	}

	@Override
	public void destroy() {
		
	}

	@Override
	public ISender getSender() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public IReceiver getReceiver() {
		// TODO Auto-generated method stub
		return null;
	}
}
