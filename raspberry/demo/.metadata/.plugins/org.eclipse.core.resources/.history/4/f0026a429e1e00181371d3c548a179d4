package com.zigbeee;

public class ZBCfg {
	
	private byte[] channel = new byte[4];	//信道
	private byte[] panID = new byte[2];		//网络号
	private byte zdType;		//zigbee设备类型
	
	public ZBCfg()
	{
		//设置0x00000800信道，默认也是0x00000800信道
		channel[0] = 0x00;
		channel[1] = 0x08;
		channel[2] = 0x00;
		channel[3] = 0x00;

		//设置默认网络号为1234
		panID[0] = 0x34;
		panID[1] = 0x12;

		//设置默认设备类型为路由器
		zdType = ZB_DEVICE_TYPE_ROUTE;
	}
	void clone(ZBCfg& cfg)
	{
		channel[0] = cfg.channel[0];
		channel[1] = cfg.channel[1];
		channel[2] = cfg.channel[2];
		channel[3] = cfg.channel[3];

		panID[0] = cfg.panID[0];
		panID[1] = cfg.panID[1];

		zdType = cfg.zdType;
	}
}
