		// TODO Auto-generated method stub
		
	}

	@Override
	public ISender getSender() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public IReceiver getReceiver() {
		// TODO Auto-generated method stub
		return null;
	}

}
