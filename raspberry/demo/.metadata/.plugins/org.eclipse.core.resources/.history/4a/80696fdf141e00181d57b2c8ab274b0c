package com.demo;
import java.io.IOException;
import java.io.InputStream;

import main.Message;
import main.MessageReceiveCallBack;
import main.MessageReceiver;

/*
 * port客户端消息接收器
 */

public class PortReceiver{

	private MessageReceiveCallBack callBack;
	private Thread thread;
	private boolean isStart;
	
	public PortReceiver(final InputStream inputStream){
		isStart = false;
		thread = new Thread(new Runnable() {
			public void run() {
				try {
					if(callBack != null){
						byte[] buffer = new byte[1024];
			            int len = -1;
			            while ( isStart && (( len = inputStream.read(buffer)) > -1 ))
		                {
			            	Message msg = new Message();
			            	msg.setMsg(new String(buffer,0,len));
			            	callBack.received(msg);
		                }
					}
				} catch (IOException e) {
					e.printStackTrace();
				}
				
			}
		});
	}
	
	public void setReceiveCallBack(MessageReceiveCallBack callBack) {
		// TODO Auto-generated method stub
		this.callBack = callBack;
	}

	public void start() {
		isStart = true;
		thread.start();
	}

	public void stop() {
		isStart = false;
	}
}
