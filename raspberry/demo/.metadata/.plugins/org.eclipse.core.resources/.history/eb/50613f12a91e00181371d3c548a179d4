package com.zigbeee;

import java.util.ArrayList;

public class Zigbee {
	
	private int receiveTimeou = 300;
	private ZBCfg cfg;
	private ArrayList<ZBAppReg> appRegList;
	
	public Zigbee(ZBCfg cfg){
		this.cfg = new ZBCfg(cfg);
		this.appRegList = new ArrayList();
	}
	
	public Zigbee(ArrayList<ZBAppReg> appRegList){
		
		setAppRegs(appRegList);
		this.cfg = new ZBCfg();
	}
	
	public Zigbee(ZBCfg cfg, ArrayList<ZBAppReg> appRegList){
		this.cfg = new ZBCfg(cfg);
		this.appRegList = new ArrayList();
		for(int i=0; i<appRegList.size(); i++){
			this.appRegList.add(new ZBAppReg(appRegList.get(i)));
		}
	}
	
	public void setZBCfg(){
	}
	
	public void setZDType(ZBDeviceType zdType){
		cfg.setZdType(zdType);
	}
	
	public void setAppRegs(ArrayList<ZBAppReg> appRegList){	//设置应用注册信息
		if(appRegList == null)
			return;
		if(this.appRegList == null)
			this.appRegList = new ArrayList<ZBAppReg>();
		
		for(int i=0; i<appRegList.size(); i++){
			this.appRegList.add(new ZBAppReg(appRegList.get(i)));
		}
	}
	/*
	void sendReceiveTimeout(unsigned int timeout);	//设置接收数据包超时时间，单位为ms
	void init();
	void start();
	bool isDataComing();
	void receive(ZBPacketReceive& packet);
	void send(ZBPacketSend& packet);

	
	ZBAppReg* appRegs;
	unsigned int appRegCount;
	unsigned char calCrc(unsigned char beginValue, unsigned char *pMsg, unsigned char len);
	int readByte();*/
}
